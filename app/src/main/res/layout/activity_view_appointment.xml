<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewAppointment">

    <include
        android:id="@+id/reminder_toolbar"
        layout="@layout/toolbar" />

    <EditText
        android:id="@+id/edit_text_appointment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:hint="Title"
        android:inputType="text" />

    <EditText
        android:id="@+id/edit_text_appointment_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:hint="Date"
        android:inputType="date" />

    <EditText
        android:id="@+id/edit_text_appointment_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:hint="Time"
        android:inputType="time"/>

    <EditText
        android:id="@+id/edit_text_appointment_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:hint="Location"
        android:inputType="text" />

    <EditText
        android:id="@+id/edit_text_appointment_contact_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Contact Number"
        android:inputType="phone" />

    <EditText
        android:id="@+id/edit_text_appointment_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:hint="Reminder"
        android:inputType="text" />

    <EditText
        android:id="@+id/edit_text_appointment_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:hint="Note"
        android:inputType="textMultiLine"/>


</android.support.v7.widget.LinearLayoutCompat>