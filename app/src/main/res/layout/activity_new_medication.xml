<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewMedicationActivity">

    <include
        android:id="@+id/reminder_toolbar"
        layout="@layout/toolbar" />

    <EditText
        android:id="@+id/edit_text_medication_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Medicine Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/edit_text_medication_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Type"
        android:inputType="text"/>

    <EditText
        android:id="@+id/edit_text_medication_dosage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Dosage"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/edit_text_medication_interval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Intake interval"/>

    <EditText
        android:id="@+id/edit_text_medication_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Instructions"
        android:inputType="text"/>

    <EditText
        android:id="@+id/edit_text_medication_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Time"
        android:inputType="time"/>

    <EditText
        android:id="@+id/edit_text_medication_start_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Start Date"
        android:inputType="date"/>

    <EditText
        android:id="@+id/edit_text_medication_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="End Date"
        android:inputType="date"/>

    <EditText
        android:id="@+id/edit_text_medication_remaining"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Remaining medicine"
        android:inputType="number"/>


</android.support.v7.widget.LinearLayoutCompat>